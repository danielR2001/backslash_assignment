{
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "build",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "ignoreDeprecations": "5.0",
    "removeComments": true,
    "allowUnreachableCode": false,
    "typeRoots": ["./node_modules/@types", "src/common/types/index.d.ts"],
    "baseUrl": "./src",
    "paths": {
      "@db/*": ["db/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@services/*": ["services/*"],
      "@my-types/*": ["common/types/*"],
      "@utils/*": ["common/utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "tests"]
}
